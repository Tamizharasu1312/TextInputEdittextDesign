<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EditTextBorderStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#919496</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorAccent">#919496</item>
        <item name="android:textSize">12sp</item>
        <item name="colorControlActivated">#919496</item>

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#919496</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">#919496</item>

        <!-- <item name="hintTextAppearance">@dimen/floating_label_font_size</item>-->
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_edtcolor</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
